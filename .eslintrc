{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "parser": "babel-eslint",
    "env": {
        "es6":     true,
        "browser": true,
        "node":    true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
      ],
   "rules": {
        "comma-dangle":                  [ 1, "never" ],
        "indent":                        [ 2, "tab" ],
        "keyword-spacing":                 2,
        "no-undef":                        2,
        "no-undefined":                    2,
        "no-unused-vars":                  2,
        "no-extra-semi":                   1,
        "no-mixed-spaces-and-tabs":        0,
        "no-unreachable":                  2,
        "no-unused-expressions":         [ 1, { "allowShortCircuit": true } ],
        "no-magic-numbers":                0,
        "no-console":                      0,
        "object-curly-spacing":          [ 1, "always" ],
        "quotes":                        [ 2, "single" ],
        "react/no-unescaped-entities":   [ 0 ],
        "react/prop-types":                0,
        "semi":                          [ 2, "always" ],
        "space-before-function-paren":   [ 2, "never" ],
        "spaced-comment":                [ 2, "always" ],
        "space-infix-ops":               [ 1 , { "int32Hint": false } ],
        "valid-typeof":                    2,
        "vars-on-top":                     2
    }
}
